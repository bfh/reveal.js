# Command to start on workspace startup (optional)
tasks:
  - name: Install & build bfh/reveal.js
    init: npm install
    command: npm start

  - name: Open Slides
    command: |
      gp ports await 8000
      gp preview $(gp url 8000)/bfh.html --external
    openMode: split-right
# Ports to expose on workspace startup (optional)
ports:
  - port: 8000
